{% extends 'base.html.twig' %}

{% block title %}References index{% endblock %}

{% block body %}
    <h1>References index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number_reference</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reference in references %}
            <tr>
                <td>{{ reference.id }}</td>
                <td>{{ reference.numberReference }}</td>
                <td>
                    <a href="{{ path('app_references_show', {'id': reference.id}) }}">show</a>
                    <a href="{{ path('app_references_edit', {'id': reference.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_references_new') }}">Create new</a>
{% endblock %}
